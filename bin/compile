#!/usr/bin/env bash

set -eo pipefail

BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
PERL=`which perl`

echo "-----> Found an index.md"
echo "-----> Markdown to HTML"

MARKDOWN_FILES=`find $1 -name "*.md"`

for f in $MARKDOWN_FILES; do
  NEWFILE=${f%.*}.html
  echo "       $f -> $NEWFILE"
  echo -e "<html>" > $NEWFILE
  echo -e "<head>" >> $NEWFILE
  HEADFILE=$(dirname $f)/_head.html
  if [ -f $HEADFILE ]; then
    echo "         using header $HEADFILE"
    cat $HEADFILE >> $NEWFILE
  fi
  echo -e "</head>" >> $NEWFILE
  echo -e "<body>" >> $NEWFILE
  $PERL $ROOT_DIR/opt/Markdown.pl $f >> $NEWFILE
  echo -e "</body>" >> $NEWFILE
  echo -e "</html>" >> $NEWFILE
  rm $f
done 
